@page
@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
    <title>Вход в систему</title>
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
        }

        #backgroundImageWrapper { /*2048*/
            min-width: 1200px;
            max-width: 2048px;
            margin: 0 auto;
            background-repeat: no-repeat;
            background-image: url(/static/media/BackgroundSign.af379010.png);
        }



        #wrapper {
            height: 900px;
            font: 20px Segoe UI Semilight sans-serif;
        }

        /*Header*/

        #header {
            height: 112px;
            color: #ffffff;
            border-bottom: 1px solid #557FAF;
        }

        #logo {
            float: left;
            height: 100px;
            margin-left: 50px;
        }

            #logo img {
                height: 110px;
            }


        .block {
            border: 1px solid #F00;
        }


        #menu {
            width: 650px;
            height: 112px;
            margin-left: 100px;
            float: left;
        }

            #menu ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
            }

                #menu ul li {
                    float: left;
                }

                    #menu ul li a div {
                        width: 160px;
                        height: 70px;
                        padding: 40px 0 72px 0;
                        text-align: center;
                        transition: all 0.8s;
                        border-bottom: 6px solid rgba(0, 0, 0, 0);
                    }

                        #menu ul li a div:hover {
                            background-color: #FFF;
                            cursor: pointer;
                            border-color: rgba(0, 0, 0, 1);
                            color: #1A73D2;
                            transition: all 0.8s;
                        }

            #menu li:hover a {
                color: #FFF;
            }


        .active {
            background-color: #FFF;
            color: #1A73D2;
            border-bottom: 4px solid #000;
        }


        #menu ul a {
            color: #CCC;
            text-decoration: none;
        }

        #aLogBtn {
            float: right;
            text-decoration: none;
        }

        .loginButton {
            border: 1px solid #000;
            text-align: center;
            color: #000;
            text-transform: uppercase;
            width: 200px;
            height: 50px;
            padding-top: 10px;
            margin: 30px 0 0 0;
            border-radius: 20px;
            transition: background-color 0.4s ease-out, color 0.4s ease-out;
        }

            .loginButton:hover {
                background-color: #000;
                color: #1A73D2;
                transition: background-color 0.4s ease-in, color 0.4s ease-in;
                cursor: pointer;
            }


        /*Content*/

        #loginPanel {
            background-color: inherit;
            width: 480px;
            margin: 0 auto;
        }

        #ErrValidMessage {
            color: #bd0000;
            font-size: 20px;
            margin: -43px 0 15px 0;
        }

        .inputField {
            width: 480px;
            border: 2px solid #76ABEA;
            border-radius: 5px;
            height: 60px;
            color: #76ABEA;
            font-size: 30px;
            margin-bottom: 40px;
            transition: border-color 0.2s ease-in-out;
        }

            .inputField:hover {
                border-color: #ccc;
                transition: border-color 0.2s ease-in-out;
            }

                .inputField:hover .Glif {
                    color: #ccc;
                    transition: color 0.2s ease-in-out;
                }

        .Glif {
            font-size: 24px;
            float: left;
            margin: 14px 20px 0 15px;
            transition: color 0.2s ease-in-out;
        }




        #Account_Login, #Account_Pass, #Account_Pass_Confirm {
            width: 410px;
            height: 56px;
            border: none;
            background-color: inherit;
            color: #cfd9e4;
            font-weight: 100;
        }

        #contentText {
            font-family: "Segoe UI", sans-serif;
            font-size: 60px;
            color: #76ABEA;
            text-align: center;
            margin: 150px 0 70px 0;
            font-weight: 100;
        }

        #Submit {
            float: left;
        }

        #submitInput {
            width: 200px;
            height: 50px;
            font-size: 22px;
            font-weight: 100;
        }

        #Register {
            width: 240px;
            margin-left: 240px;
            height: 50px;
            color: #76ABEA;
            padding-top: 9px;
            font-weight: 100;
            cursor: pointer;
            transition: color 0.2s ease-in-out;
        }

        #content a {
            text-decoration: none;
        }

        #Register:hover {
            color: #DDD;
            transition: color 0.2s ease-in-out;
        }

        #GlifReg {
            float: right;
            padding-top: 2px;
        }



        /*Footer*/


        #footer {
            background-repeat: no-repeat;
            background-image: url(/static/media/FooterBackground.1f05b86f.png);
            height: 210px;
            min-width: 1200px;
            max-width: 2048px;
            margin: 0 auto;
        }

        #footerMenu {
            margin: 10px 0 58px 0;
        }

            #footerMenu a div {
                font: 16px Segoe UI Semilight sans-serif;
                color: #33333D;
                text-transform: uppercase;
                height: 60px;
                padding: 30px 0 40px 0;
                text-align: center;
                border-bottom: 2px solid #33333D;
                transition: all 0.8s;
            }

                #footerMenu a div:hover {
                    cursor: pointer;
                    border-bottom: 2px solid #006EF6;
                    color: #1A73D2;
                    transition: all 0.8s;
                }

            #footerMenu a {
                text-decoration: none;
            }

        .nullPadding {
            padding-left: 0 !important;
            padding-right: 0 !important;
        }



        #copyright {
            font: 20px Segoe UI Semilight sans-serif;
            text-align: center;
            padding-top: 25px;
            height: 70px;
            background-color: #0F54A2;
            color: #76ABEA;
        }

        #author {
            color: #FFF;
        }
    </style>

</head>
<body>
    <div id="backgroundImageWrapper">
        <div class="container">
            <div class="row">
                <div id="wrapper">
                    <div id="header">
                        <div id="logo"><img src="~/static/media/MiddleLightBlueTree.9a00ffa3.png" alt="Logo" /></div>
                        <div id="menu">
                            <ul>
                                <li>
                                    <a href="/">
                                        <div>Генеалогическое древо</div>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Reference">
                                        <div>Справка</div>
                                    </a>
                                </li>
                                <li>
                                    <a href="/About">
                                        <div>О проекте</div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <partial name="_LoginPartial" />
                    </div>
                    <div id="content">
                        <div id="contentText">Вход в систему</div>
                        <form id="account" method="post">
                            <div id="loginPanel">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <div class="inputField">
                                        <div class="Glif">
                                            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                                        </div>
                                        <input id="Account_Login" asp-for="Input.Email" class="inputGroup" placeholder="E-mail" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="inputField">
                                        <div class="Glif">
                                            <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                                        </div>
                                        <input id="Account_Pass" asp-for="Input.Password" class="inputGroup" placeholder="Пароль" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div id="Submit">
                                        <button id="submitInput" type="submit" class="btn btn-primary">Войти</button>
                                    </div>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                        <div id="Register">
                                            <div id="GlifReg">
                                                <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                                            </div>
                                            Создать новый аккаунт
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div id="footer">
            <div class="container">
                <div id="footerMenu">
                    <div class="row">
                        <div class="col-md-12 nullPadding">
                            <a href="/FamilyTree"><div class="col-md-4">Генеалогическое древо</div></a>
                            <a href="/Support/Reference"><div class="col-md-4">Справка</div></a>
                            <a href="/Support/About"><div class="col-md-4">О проекте</div></a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div id="copyright" class="col-md-6 col-md-offset-3">
                        &copy @DateTime.Now.Year  <span id="author">Author Name</span>. Все права защищены.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Identity/lib/jquery/dist/jquery.js"></script>
    <script src="~/Identity/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/Identity/lib/jquery-validation/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Identity/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
